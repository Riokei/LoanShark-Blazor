
@if (PaymentTable != null && PaymentTable.Count > 0)
{

    <table class="table table-dark table-striped table-hover mt-3">
        <thead>
            <tr>
                <th scope="col">Month</th>
                <th scope="col">Payment</th>
                <th scope="col">Principal</th>
                <th scope="col">Interest</th>
                <th scope="col">Total Interest</th>
                <th scope="col"> Balance</th>
            </tr>
        </thead>
        <tbody>
             @foreach (var item in PaymentTable)
        {
        <tr>
        <td>@item.Month</td>
        <td>$@item.Payment.ToString("0.00")</td>
        <td>$@item.Principal.ToString("0.00")</td>
        <td>$@item.Interest.ToString("0.00")</td>
        <td>$@item.TotalInterest.ToString("0.00")</td>
        <td>$@item.Balance.ToString("0.00")</td>
        </tr>
        }
        </tbody>

    </table>
}

@code {
    [Parameter]
    public List<LoanPayment> PaymentTable { get; set; } = new();

}
